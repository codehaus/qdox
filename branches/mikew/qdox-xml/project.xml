<?xml version="1.0"?>
<project>

    <pomVersion>3</pomVersion>

    <name>QDox-XML</name>
    <id>qdox-xml</id>
    <currentVersion>0.1</currentVersion>
    <inceptionYear>2003</inceptionYear>

    <organization>
        <name>Mike Williams</name>
    </organization>
    
    <package>com.thoughtworks.qdox.xml</package>

    <shortDescription>
        XML serialization for QDox
    </shortDescription>
    
    <url>http://qdox.codehaus.org/</url>

    <developers>
        <developer>
            <name>Mike Williams</name>
            <id>mdub</id>
            <email>mdub@dogbiscuit.org</email>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <id>qdox</id>
            <version>1.2</version>
        </dependency>
		<dependency>
			<id>ant</id>
			<version>1.5.1</version>
		</dependency>
		<dependency>
			<id>junit</id>
			<version>3.8.1</version>
		</dependency>
    </dependencies>

    <reports>
        <report>maven-changelog-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-junit-report-plugin</report>
    </reports>
    
    <build>

        <sourceDirectory>src/java</sourceDirectory>
        
        <jars/>
        <resources/>
        
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*_Test.java</include>
            </includes>
            <resources>
            </resources>
        </unitTest>

        <integrationUnitTestSourceDirectory/>
        <integrationUnitTest/>
        
    </build>
    
</project>
