  <siteDirectory>/www/qdox.codehaus.org/</siteDirectory>
  <distributionDirectory>/www/qdox.codehaus.org/downloads/</distributionDirectory>

  <repository>
    <connection>scm:cvs:pserver:anonymous@cvs.codehaus.org:/cvsroot/qdox:qdox-attributes</connection>
    <developerConnection>scm:cvs:ext:${maven.username}@cvs.codehaus.org:/cvsroot/qdox:qdox-attributes</developerConnection>
    <url>http://cvs.codehaus.org/viewcvs.cgi/qdox-attributes/?cvsroot=qdox</url>   
  </repository>
  
