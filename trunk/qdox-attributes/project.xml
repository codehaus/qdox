<?xml version="1.0" encoding="ISO-8859-1"?>

<project>

  <pomVersion>3</pomVersion>

  <name>QDox Attributes</name>
  <id>qdox-attributes</id>
  <currentVersion>0.7-SNAPSHOT</currentVersion>
  <inceptionYear>2003</inceptionYear>
  <package>com.thoughtworks.qdox.attributes</package>
  
  <shortDescription>QDox Attributes - Runtime Code Attributes Toolkit</shortDescription>
  <description>
    QDox Attributes is a high speed, small footprint toolkit for extracting attribute
    declarations from source file JavaDoc @tags and making them available to runtime
    clients.  It is most useful to meta-programs and code generators, though there are
    many other potential uses.
  </description>
  
  <!-- to be fixed by somebody who knows the web site structure -->
