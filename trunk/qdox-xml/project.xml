<?xml version="1.0"?>
<project>

    <pomVersion>3</pomVersion>

    <name>QDox-XML</name>
    <id>qdox-xml</id>
    <currentVersion>0.1</currentVersion>
    <inceptionYear>2003</inceptionYear>

    <organization>
        <name>Mike Williams</name>
    </organization>
    
    <package>com.thoughtworks.qdox.xml</package>

    <shortDescription>
        XML serialization for QDox
    </shortDescription>
    
    <url>http://qdox.codehaus.org/</url>
    <issueTrackingUrl>http://jira.codehaus.org/secure/BrowseProject.jspa?id=10103</issueTrackingUrl>

    <repository>
        <connection>scm:cvs:pserver:anonymous@cvs.codehaus.org:/cvsroot/qdox:qdox-xml</connection>
        <developerConnection>scm:cvs:ext:${maven.username}@cvs.codehaus.org:/cvsroot/qdox:qdox-xml</developerConnection>
        <url>http://cvs.codehaus.org/viewcvs.cgi/qdox-xml/?cvsroot=qdox</url>
    </repository>
  
    <versions>
        <version>
            <id>current</id>
            <name>Current</name>
            <tag>HEAD</tag>
        </version>
    </versions>

    <mailingLists>
        <mailingList>
            <name>QDox User List</name>
            <subscribe>http://lists.codehaus.org/mailman/listinfo/qdox-user</subscribe>
            <unsubscribe>http://lists.codehaus.org/mailman/listinfo/qdox-user</unsubscribe>
            <archive>http://lists.codehaus.org/pipermail/qdox-user/</archive>
        </mailingList>
    </mailingLists>
    
    <developers>
        <developer>
            <name>Mike Williams</name>
            <id>mdub</id>
            <email>mdub@dogbiscuit.org</email>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <id>qdox</id>
            <version>1.2</version>
        </dependency>
        <dependency>
            <id>xml-apis</id>
            <version>2.0.2</version>
        </dependency>
        <dependency>
            <id>ant</id>
            <version>1.5.1</version>
        </dependency>
        <dependency>
            <id>junit</id>
            <version>3.8.1</version>
        </dependency>
    </dependencies>

    <build>

        <sourceDirectory>src/java</sourceDirectory>
        
        <jars/>
        <resources/>
        
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*_Test.java</include>
            </includes>
            <resources>
            </resources>
        </unitTest>

    </build>

    <reports>
        <report>maven-changes-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-clover-plugin</report>
    </reports>
    
</project>
