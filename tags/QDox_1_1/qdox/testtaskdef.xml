<project name="qdox" default="test">

  <path id="test.classpath">
    <pathelement path="target/classes"/>    
  </path>

  <taskdef name="qdoxprint" classname="com.thoughtworks.qdox.ant.ConsoleLoggingQdoxTask">
    <classpath refid="test.classpath" />
  </taskdef>

  <target name="test">
  
    <qdoxprint>
      <fileset dir="src/java">
        <include name="com/thoughtworks/qdox/Searcher.java"/>
      </fileset>
      <fileset dir="src/java">
        <include name="**/SuffixFilter.java"/>
      </fileset>

    </qdoxprint>
    
  </target>

</project>